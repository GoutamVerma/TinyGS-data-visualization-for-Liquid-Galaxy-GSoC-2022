<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_editor_absoluteX="917dp"
    tools:layout_editor_absoluteY="470dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CatalogActivity">

    <include
        android:id="@+id/top_bar"
        layout="@layout/activity_top_bar"
        android:layout_width="1280dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintVertical_bias="0.016"
        tools:ignore="MissingConstraints">

        <!-- Title, secondary and supporting text -->

        <TextView
            android:id="@+id/satelite_title"
            android:layout_width="588dp"
            android:layout_height="75dp"
            android:paddingLeft="15dp"
            android:paddingTop="30dp"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/satelite_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="vertical"
            android:text="@string/application_intro"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/textColorClick"
            android:textSize="@dimen/primary_text_font_size" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:src="@drawable/banner2"/>

        <TextView
            android:id="@+id/use_title"
            android:layout_width="588dp"
            android:layout_height="75dp"
            android:paddingLeft="15dp"
            android:paddingTop="30dp"
            android:textStyle="bold"
            android:text="@string/how_to_use"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/use_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="vertical"
            android:text="@string/use_description"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/textColorClick"
            android:textSize="@dimen/primary_text_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:src="@drawable/connect_user_manual"/>

        <TextView
            android:id="@+id/use_description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="vertical"
            android:text="@string/user_description2"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/textColorClick"
            android:textSize="@dimen/primary_text_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:src="@drawable/packet_user_manual"/>

        <TextView
            android:id="@+id/use_description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="vertical"
            android:text="@string/user_description3"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/textColorClick"
            android:textSize="@dimen/primary_text_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:src="@drawable/satellite_user_manual"/>


        <TextView
            android:id="@+id/use_description4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="vertical"
            android:text="@string/user_description4"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/textColorClick"
            android:textSize="@dimen/primary_text_font_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:src="@drawable/satellite_information_user_manual"/>


        <TextView
            android:id="@+id/end_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="vertical"
            android:text="@string/end"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/textColorClick"
            android:textSize="@dimen/primary_text_font_size" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>