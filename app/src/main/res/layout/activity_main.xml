<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <include
        android:id="@+id/top_bar"
        layout="@layout/activity_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/connection_status"
        android:layout_width="48dp"
        android:layout_height="47dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/ic_status_connection_red"
        android:fontFamily="@font/roboto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toEndOf="@+id/username"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="915dp"
        android:layout_height="504dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="208dp"
        android:layout_marginBottom="164dp"
        android:contentDescription="@string/label_logo"
        android:scaleX=".5"
        android:scaleY=".5"
        android:src="@drawable/applogo"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar" />

    <TextView
        android:id="@+id/text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto"
        android:minWidth="140dp"
        android:text="@string/account_username"
        android:textColor="@color/textColorClick"
        android:textSize="@dimen/primary_text_font_size"
        app:layout_constraintEnd_toStartOf="@+id/username"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/username" />

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginEnd="416dp"
        android:layout_marginBottom="140dp"
        android:autofillHints="@string/account_hint_username"
        android:background="@drawable/rectangle_insert_url"
        android:fontFamily="@font/roboto_thin"
        android:hint="@string/account_hint_username"
        android:inputType="text"
        android:maxLength="20"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/textColorClick"
        android:textColorHint="@color/hintColor"
        android:textSize="@dimen/primary_text_font_size"
        app:layout_constraintBottom_toTopOf="@+id/text_insert_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_username" />

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="348dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:minWidth="140dp"
        android:text="@string/account_password"
        android:textColor="@color/textColorClick"
        android:textSize="@dimen/primary_text_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginEnd="416dp"
        android:layout_marginBottom="40dp"
        android:autofillHints="@string/account_hint_password"
        android:background="@drawable/rectangle_insert_url"
        android:fontFamily="@font/roboto_thin"
        android:hint="@string/account_hint_password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/textColorClick"
        android:textColorHint="@color/hintColor"
        android:textSize="@dimen/primary_text_font_size"
        app:layout_constraintBottom_toTopOf="@+id/text_insert_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_password"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintVertical_bias="0.285" />

    <TextView
        android:id="@+id/text_insert_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto"
        android:minWidth="665dp"
        android:text="@string/insert_the_URL"
        android:textColor="@color/textColorClick"
        android:textSize="@dimen/hint_text_font_size"
        app:layout_constraintBottom_toTopOf="@+id/uri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/uri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="370dp"
        android:layout_marginEnd="416dp"
        android:layout_marginBottom="16dp"
        android:autofillHints="@string/example_to_connect"
        android:background="@drawable/rectangle_insert_url"
        android:fontFamily="@font/roboto_thin"
        android:hint="@string/example_to_connect"
        android:inputType="textUri"
        android:maxLength="50"
        android:textAlignment="center"
        android:textColor="@color/textColorClick"
        android:textColorHint="@color/hintColor"
        android:textSize="@dimen/hint_text_font_size"
        app:layout_constraintBottom_toTopOf="@+id/butt_connect_liquid_galaxy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/butt_connect_liquid_galaxy"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="370dp"
        android:layout_marginEnd="416dp"
        android:layout_marginBottom="196dp"
        android:background="@drawable/button_primary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/button_connect"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/button_text_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/connecting"
        android:layout_width="665dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="287dp"
        android:fontFamily="@font/roboto_thin"
        android:textAlignment="center"
        android:textColor="@color/textColorClick"
        android:textSize="@dimen/simple_cms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/butt_connect_liquid_galaxy" />

    <Button
        android:id="@+id/butt_try_again"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginStart="370dp"
        android:layout_marginEnd="416dp"
        android:layout_marginBottom="196dp"
        android:background="@drawable/button_primary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/button_try_again"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/button_text_font_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lg_rigs_txt"
        android:layout_width="138dp"
        android:layout_height="31dp"
        android:layout_marginStart="348dp"
        android:fontFamily="@font/roboto"
        android:minWidth="140dp"
        android:text="Total LG rigs"
        android:textColor="@color/textColorClick"
        android:textSize="@dimen/primary_text_font_size"
        app:layout_constraintBottom_toTopOf="@+id/text_insert_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.619"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/lg_rig"
        android:layout_width="372dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/rectangle_insert_url"
        android:fontFamily="@font/roboto_thin"
        android:hint="5"
        android:maxLength="20"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/textColorClick"
        android:textColorHint="@color/hintColor"
        android:textSize="@dimen/primary_text_font_size"
        app:layout_constraintBottom_toTopOf="@+id/text_insert_url"
        app:layout_constraintStart_toEndOf="@+id/lg_rigs_txt"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <Button
        android:id="@+id/shutdown"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:text="Shutdown"
        android:background="@drawable/button_primary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reboot"
        app:layout_constraintTop_toBottomOf="@+id/butt_connect_liquid_galaxy"
        app:layout_constraintVertical_bias="0.198" />

    <Button
        android:id="@+id/clear_kml"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:text="Clear KMLs"
        android:background="@drawable/button_primary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clean_logo"
        app:layout_constraintTop_toBottomOf="@+id/butt_connect_liquid_galaxy"
        app:layout_constraintVertical_bias="0.194" />

    <Button
        android:id="@+id/relaunch"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:text="Relauch"
        android:background="@drawable/button_primary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clear_kml"
        app:layout_constraintTop_toBottomOf="@+id/butt_connect_liquid_galaxy"
        app:layout_constraintVertical_bias="0.188" />

    <Button
        android:id="@+id/reboot"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:text="Reboot"
        android:background="@drawable/button_primary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relaunch"
        app:layout_constraintTop_toBottomOf="@+id/butt_connect_liquid_galaxy"
        app:layout_constraintVertical_bias="0.186" />

    <Button
        android:id="@+id/clean_logo"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="260dp"
        android:text="Clean Logo"
        android:background="@drawable/button_primary"
        android:elevation="8dp"
        android:fontFamily="@font/roboto_light"
        android:textAllCaps="false"
        android:textColor="@color/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt_connect_liquid_galaxy"
        app:layout_constraintVertical_bias="0.198" />

</androidx.constraintlayout.widget.ConstraintLayout>